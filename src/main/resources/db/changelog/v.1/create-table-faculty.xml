<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <preConditions onFail="WARN">
        <not>
            <tableExists tableName="faculty"/>
        </not>
    </preConditions>
    <changeSet id="create-table-faculty" author="tssvett">
        <createTable tableName="faculty">
            <column name="faculty_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="faculty"
                baseColumnNames="user_id"
                referencedTableName="bot_user"
                referencedColumnNames="user_id"
                constraintName="fk_faculty_user"/>
    </changeSet>
</databaseChangeLog>
