<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <preConditions onFail="WARN">
        <not>
            <tableExists tableName="bot_user"/>
        </not>
    </preConditions>
    <changeSet id="create-table-bot_user" author="tssvett">
        <createTable tableName="bot_user">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="chat_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="faculty_name" type="VARCHAR">
                <constraints nullable="true"/>
            </column>

            <column name="group_name" type="VARCHAR">
                <constraints nullable="true"/>"
            </column>

            <column name="course" type="VARCHAR">
                <constraints nullable="true"/>
            </column>

            <column name="registration_state" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>